build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:
tested-with: GHC ==9.6.3 || ==9.8.1

common common
    build-depends:
        base >= 4.19.0,
    ghc-options: -Wall
    default-language: GHC2021

common common-tests
    import: common
    build-depends:
      tasty           ^>= 1.5,
      tasty-hunit     ^>= 0.10,
      containers >= 0.6.8 && < 0.7,
      text >= 2.1 && < 2.2,
      transformers >= 0.6.1 && < 0.7,
      cauldron,
    ghc-options: -Wall
    default-language: GHC2021

library
    import:           common
    exposed-modules:  Cauldron
    build-depends:
        algebraic-graphs ^>= 0.7,
        multicurryable ^>= 0.1.1.0,
        containers >= 0.6.8 && < 0.7,
        bytestring >= 0.12.0 && < 0.13,
        sop-core >= 0.5.0 && < 0.6,
        text >= 2.1 && < 2.2,
    hs-source-dirs:   lib

executable cauldron-example-wiring
    import:           common
    main-is:          Main.hs
    build-depends:
        cauldron,

    hs-source-dirs:   app

test-suite tests
    import:           common-tests
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          tests.hs

test-suite app-tests
    import:           common-tests
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          appTests.hs

test-suite tests-managed
    import:           common-tests
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          managedTests.hs
