build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common common
    build-depends:
        base
    ghc-options: -Wall
    default-language: GHC2021

library
    import:           common
    exposed-modules:  Cauldron
    -- other-modules:
    -- other-extensions:
    build-depends:
        base,
        containers,
        algebraic-graphs ^>= 0.7,
        sop-core,
        multicurryable ^>= 0.1.1.0,
        bytestring,
        text,
    hs-source-dirs:   lib

executable cauldron-example-wiring
    import:           common
    main-is:          Main.hs
    -- other-modules:
    -- other-extensions:
    build-depends:
        base,
        cauldron,

    hs-source-dirs:   app

test-suite tests
    import:           common
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          tests.hs
    build-depends:    
      cauldron,
      bytestring,
      text,
      tasty           ^>= 1.5,
      tasty-hunit     ^>= 0.10,
      transformers,
      containers,